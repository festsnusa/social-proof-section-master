mixin stars(arr)
  .stars 
    each value in arr
      .stars__item
        -let i=1
        .stars__icons
          while i<=5
            img.stars__icon(src="./images/icon-star.svg" alt="star")
            -i++ 
        p.stars__text= `${value}`

mixin comment(data)
  .comment 
    each value in data
      .comment__item
        .comment__header 
          img.comment__image(src=value["src"], alt=value["name"])
          .comment__text-section 
            p.comment__name= value["name"]
            p.comment__buyer Verified Buyer
        p.comment__text= `" ${value["comment"]} "`

